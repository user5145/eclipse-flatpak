{
	"app-id": "org.eclipse.Eclipse",
	"runtime": "org.gnome.Sdk",
	"runtime-version": "3.26",
	"branch": "4.6",
	"sdk": "org.gnome.Sdk",
	"command": "eclipse",
	"finish-args": [
		"--socket=x11",
		"--share=ipc",
		"--share=network",
		"--device=all",
		"--filesystem=home",
		"--env=JAVA_HOME=/app/extension/jvm/openjdk-10",
		"--env=PATH=/app/bin:/usr/bin:/app/extension/jvm/openjdk-10/bin"
	],
	"cleanup": [
		"/COPYRIGHT",
		"/LICENSE",
		"/README",
		"/release",
		"/THIRDPARTYLICENSEREADME-JAVAFX.txt",
		"/THIRDPARTYLICENSEREADME.txt",
		"/Welcome.html",
		"/plugin",
		"/man",
		"/lib/applet",
		"/lib/desktop",
		"/eclipse/readme",
		"/eclipse/notice.html"
	],
	"add-extensions": {
		"org.freedesktop.Sdk.Extension.openjdk10": {
			"version": "1.6",
			"directory": "extension",
			"subdirectories": true,
			"no-auto-download": false,
			"autodelete": true
		}
	},
	"modules": [
		{
			"name": "eclipse",
			"no-autogen": true,
			"sources": [
				{
					"type": "archive",
					"url": "http://www.mirrorservice.org/sites/download.eclipse.org/eclipseMirror/technology/epp/downloads/release/neon/1a/eclipse-java-neon-1a-linux-gtk-x86_64.tar.gz",
					"sha256": "cd22d953dee2db30d86c51a50189dd062c8ac68c5776cbe525a7f852986f23b5",
					"dest": "eclipse"
				},
				{
					"type": "file",
					"path": "Makefile",
					"dest-filename": "Makefile"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.png"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.desktop"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.appdata.xml"
				}
			],
			"post-install": [
				"mkdir -p /app/extension"
			]
		}
	]
}

{
	"app-id": "org.eclipse.Eclipse",
	"runtime": "org.gnome.Platform",
	"runtime-version": "3.28",
	"branch": "4.8",
	"sdk": "org.gnome.Sdk",
	"command": "eclipse",
	"finish-args": [
		"--socket=x11",
		"--share=ipc",
		"--share=network",
		"--device=all",
		"--filesystem=home",
		"--filesystem=/run/media",
		"--env=JAVA_HOME=/app/extension/jvm/openjdk-10",
		"--env=PATH=/app/bin:/usr/bin:/app/extension/jvm/openjdk-10/bin"
	],
	"cleanup": [
		"/COPYRIGHT",
		"/LICENSE",
		"/README",
		"/release",
		"/THIRDPARTYLICENSEREADME-JAVAFX.txt",
		"/THIRDPARTYLICENSEREADME.txt",
		"/Welcome.html",
		"/plugin",
		"/man",
		"/lib/applet",
		"/lib/desktop",
		"/eclipse/readme",
		"/eclipse/notice.html"
	],
	"add-extensions": {
		"org.freedesktop.Sdk.Extension.openjdk10": {
			"version": "1.6",
			"directory": "extension",
			"subdirectories": true,
			"no-auto-download": false,
			"autodelete": true
		}
	},
	"modules": [
		{
			"name": "eclipse",
			"no-autogen": true,
			"sources": [
				{
					"type": "archive",
					"url": "http://download.springsource.com/release/ECLIPSE/photon/R/eclipse-jee-photon-R-linux-gtk-x86_64.tar.gz",
					"sha256": "3bd00147fe545d1263dd10cdba9850d1fbeaed463582162bb15ddd0d6cfbd3ee",
					"dest": "eclipse"
				},
				{
					"type": "file",
					"path": "Makefile",
					"dest-filename": "Makefile"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.png"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.desktop"
				},
				{
					"type": "file",
					"path": "org.eclipse.Eclipse.appdata.xml"
				}
			],
			"post-install": [
				"mkdir -p /app/extension"
			]
		}
	]
}
